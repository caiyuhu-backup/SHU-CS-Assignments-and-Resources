
page {
	background: #fff;
}
.comment {
	margin: 30rpx;
}
.slot-wrap {
	flex: 1;
	padding: 0 30rpx;
	font-weight: bold;
	color: #f4f4f5;
}
.wrap {
	margin-top: 30rpx;
}
.slot-btn {
	width: 341rpx;
	height: 240rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	background: rgb(244, 245, 246);
	border-radius: 10rpx;
}
.slot-btn__hover {
	background-color: rgb(235, 236, 238);
}
.pre-box {
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-wrap: wrap;
}
.pre-item {
	flex: 0 0 48.5%;
	border-radius: 10rpx;
	height: 240rpx;
	overflow: hidden;
	position: relative;
	margin-bottom: 20rpx;
}
.pre-item-image {
	width: 100%;
	height: 240rpx;
}

